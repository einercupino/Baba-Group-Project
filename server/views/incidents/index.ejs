<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>All Incidents </h3>
          <a href="/incidents/create" class="btn btn-primary"><i class="fa fa-plus"></i>Create Incident</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Genre</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <% for (let count = 0; count < incidents.length; count++) { %>
                <tr>
                  <td><%= incidents[count].title %></td>
                  <td class="text-center">$<%= incidents[count].price %></td>
                  <td class="text-center"><%= incidents[count].author %></td>
                  <td class="text-center"><%= incidents[count].genre %></td>

                  <td class="text-center">

                    <a href="/incidents/update/<%= incidents[count]._id %>" class="btn btn-primary btn-sm">
                      <i class="fa-solid fa-pencil"></i> Edit</a>
                  </td>

                  <td class="text-center">

                    <a href="/incidents/delete/<%= incidents[count]._id %>" class="btn btn-danger btn-sm">
                      <i class="fa-solid fa-trash"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


