<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      
      <form class="form" method="post">
        <h1><%= title %></h1><br><br>


        <div class="row">
          <div class="col-md-offset-2 col-md-4">
            <div class="form-group">
              <label for="numbertf">Incident Number</label>
              <input type="text" class="form-control" id="numbertf"
              placeholder="Creating new incident" name="number" readonly required>
            </div>
          </div>
        </div>

      <div class="row">
        <div class="col-md-offset-2 col-md-4">
              <div class="form-group">
                <label for="statetf">State</label>
                <input type="text" class="form-control" id="statetf"
                placeholder="Incident Status" name="state" required>
              </div>
              <div class="form-group">
                <label for="prioritytf">Priority</label>
                <input type="text" class="form-control" id="prioritytf"
                placeholder="Low, Medium, High" name="priority" required>
              </div>
              <div class="form-group">
                <label for="typetf">Type</label>
                <input type="text" class="form-control" id="typetf"
                placeholder="Incident Type" name="type" required>
              </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <label for="custnametf">Customer Name</label>
            <input type="text" class="form-control" id="custnametf"
            placeholder="Customer Name" name="custname" required>
          </div>
          <div class="form-group">
            <label for="custcontacttf">Customer Contact</label>
            <input type="text" class="form-control" id="custcontacttf"
            placeholder="Customer Contact" name="custcontact" required>
          </div>
          <div class="form-group">
            <label for="createdbytf">Created by</label>
            <input type="text" class="form-control" id="createdbytf"
            placeholder="Incident created by" name="createdby" required>
          </div>
          
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <div class="form-group">
            <label for="descriptiontf">Description</label>
            <textarea class="form-control" id="descriptiontf" placeholder="Incident description" name="description" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/incidents" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
        </div>
      </div>
    </form>
    </div>
